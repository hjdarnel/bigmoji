{
    "name": "bigmoji",
    "author": "Henry Darnell",
    "description": "A server that responds to slash commands in Slack by parsing the argument and returning the link to the emoji image.",
    "repository": "github:hjdarnel/bigmoji",
    "license": "MIT",
    "scripts": {
        "prestart": "run-s lint build",
        "start": "micro index.js",
        "build": "tsc",
        "lint": "tslint --project tslint.json",
        "start:dev": "npm install && nodemon -x 'npm start | bunyan -o short -l debug' -L -e ts"
    },
    "dependencies": {
        "bunyan": "1.8.12",
        "micro": "9.3.3",
        "query-string": "6.1.0",
        "request": "2.88.0",
        "request-promise-native": "1.0.5"
    },
    "devDependencies": {
        "@types/micro": "^7.3.3",
        "@types/node": "^10.12.0",
        "@types/query-string": "^6.1.1",
        "@types/request-promise-native": "^1.0.15",
        "nodemon": "^1.18.4",
        "npm-run-all": "^4.1.3",
        "tslint": "^5.11.0",
        "typescript": "^3.1.3"
    }
}
